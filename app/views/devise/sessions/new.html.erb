<h2 class="signin-h2 round">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email %><br /><%= f.text_field :email %> <br/></p>

  <p><%= f.label :password %><br /><%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>
  or signin using
     <div>
      <a href="/auth/twitter" class="auth_provider"><%= image_tag "twitter_32.png", :size => "32x32",:alt => "Twitter" %></a>
      <a href="/auth/facebook" class="auth_provider"><%= image_tag "facebook_32.png", :size => "32x32", :alt => "Facebook" %></a>
      <a href="/auth/google_apps" class="auth_provider"><%= image_tag "google_32.png", :size => "32x32", :alt => "Google" %></a>
      <a href="/auth/open_id" class="auth_provider"><%= image_tag "open_id_32.png", :size => "32x32",:alt => "OpenID" %></a>
     <div class="clear"></div>
     </div>
<% end %>

<%= render :partial => "devise/shared/links" %>

